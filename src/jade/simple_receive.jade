extends layouts/_simple

block title
  title Title of template

block content
  section.top
    include ./includes/_header.jade
    .step.step_one
      .step__in
        h4.title-middle Для получения средств укажите номер перевода
        form.step__form
          .step__block
            .step__shad
            input.input(type="text" placeholder="Номер перевода").input-yellow
          .step__btn
            button.btn(type="submit")
              span далее
          .step__check
            label.checkbox
              input(type="checkbox" checked)
              span С
                a(href="#") условиями
                | ознакомлен/а
                i.icon-check-yellow
    .step.step_two(style="display: none;")
      form.step__in
        h4.title-middle Проверьте правильность данных
        .step__block
          .step__form
            .step__row
              .step__bold Код операции
              p 7894048473р84
            .step__row.is-blue
              .step__bold Карта получателя
              p 6792 9827 2890 1765
        .step__btn
          button.btn(type="submit")
            span далее

block content-footer
  include ./includes/_content-description.jade
  hr.line

block footer
  include ./includes/_footer.jade
