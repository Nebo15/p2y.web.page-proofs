extends layouts/_main

block title
  title Title of template

block content
  section.top
    include ./includes/_header.jade
    .step.step_one
      .step__in
        h4.step__title Для получения средств укажите номер перевода
        form.step__form
          .step__block
            input(type="text" placeholder="Номер перевода").input-yellow
          .step__btn
            button.btn.btn_shad(type="submit")
              span Далее
          label.checkbox
            input(type="checkbox")
            span С
              b условиями
              | ознакомлен/а
              i.icon-check-yellow
    .step.step_two(style="display: none;")
      form.step__in
        h4.step__title ПРОВЕРЬТЕ ПРАВИЛЬНОСТЬ ДАННЫХ
        .step__block
          .step__form
            .step__row
              p Код операции
              .step__bold 768996
            .step__row.is-blue
              p Карта получателя
              .step__bold 6792 9827 2890 1765
        button.btn.btn_bord-red(type="button") РЕДАКТИРОВАТЬ
        button.btn.btn_shad(type="submit")
          span ПОДТВЕРДИТЬ

block content-footer
  hr.line
  include ./includes/_content-description.jade
  hr.line.is-mb

block footer
  include ./includes/_footer.jade
